{
  "$schema": "https://schemas.wp.org/wp/6.6/theme.json",
  "customTemplates": [
    {
      "name": "blank",
      "postTypes": ["page", "post"],
      "title": "Blank"
    },
    {
      "name": "blog",
      "postTypes": ["page"],
      "title": "Blog"
    },
    {
      "name": "sidebar",
      "postTypes": ["page", "post"],
      "title": "Sidebar"
    }
  ],
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#333333",
          "name": "Text",
          "slug": "text"
        },
        {
          "color": "#151617",
          "name": "Heading",
          "slug": "heading"
        },
        {
          "color": "#0a4a8f",
          "name": "Primary Blue",
          "slug": "primary-blue"
        },
        {
          "color": "#FFFFFF",
          "name": "Weiss",
          "slug": "weiss"
        }
      ]
    },
    "layout": {
      "contentSize": "700px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"]
    },
    "typography": {
      "defaultFontSizes": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Lato",
              "fontStretch": "normal",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/lato/Lato-Regular.ttf"]
            },
            {
              "fontFamily": "Lato",
              "fontStretch": "normal",
              "fontStyle": "bold",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/lato/Lato-Bold.ttf"]
            },
            {
              "fontFamily": "Lato",
              "fontStretch": "normal",
              "fontStyle": "black",
              "fontWeight": "900",
              "src": ["file:./assets/fonts/lato/Lato-Black.ttf"]
            },
            {
              "fontFamily": "Lato",
              "fontStretch": "normal",
              "fontStyle": "light",
              "fontWeight": "300",
              "src": ["file:./assets/fonts/lato/Lato-Light.ttf"]
            },
            {
              "fontFamily": "Lato",
              "fontStretch": "normal",
              "fontStyle": "thin",
              "fontWeight": "100",
              "src": ["file:./assets/fonts/lato/Lato-Thin.ttf"]
            }
          ],
          "fontFamily": "\"Lato\",sans-serif",
          "name": "System (Lato)",
          "slug": "system-font"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Roboto Slab",
              "fontStretch": "variable",
              "fontStyle": "variable",
              "fontWeight": "100 900",
              "src": [
                "file:./assets/fonts/roboto-slab/RobotoSlab-VariableFont_wght.woff2"
              ]
            }
          ],
          "fontFamily": "\"Roboto Slab\",serif",
          "name": "Roboto Slab Serif",
          "slug": "roboto-serif"
        }
      ],
      "fontSizes": [
        {
          "fluid": {
            "max": "1rem",
            "min": "0.85rem"
          },
          "size": "1rem",
          "slug": "extra-small"
        },
        {
          "fluid": {
            "max": "1.125rem",
            "min": "1rem"
          },
          "size": "1.125rem",
          "slug": "small"
        },
        {
          "fluid": {
            "max": "1.25rem",
            "min": "1.125rem"
          },
          "size": "1.25rem",
          "slug": "medium"
        },
        {
          "fluid": {
            "max": "1.75rem",
            "min": "1.25rem"
          },
          "size": "1.75rem",
          "slug": "large"
        },
        {
          "fluid": {
            "max": "2.5rem",
            "min": "1.75rem"
          },
          "size": "2.5rem",
          "slug": "x-large"
        },
        {
          "fluid": {
            "max": "4.75rem",
            "min": "3.5rem"
          },
          "size": "4.75rem",
          "slug": "xx-large"
        },
        {
          "fluid": {
            "max": "8rem",
            "min": "5rem"
          },
          "size": "8rem",
          "slug": "xxx-large"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--text)"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--heading)",
          "text": "var(--wp--preset--color--weiss)"
        }
      },
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--heading)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--roboto-serif)",
          "fontStyle": "normal",
          "fontWeight": "300"
        }
      },
      "link": {
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--heading)"
          },
          "typography": {
            "textDecoration": "underline"
          }
        },
        "color": {
          "text": "var(--wp--preset--color--heading)"
        },
        "typography": {
          "textDecoration": "none"
        }
      }
    },
    "spacing": {
      "padding": {
        "bottom": "0px",
        "left": "22px",
        "right": "22px",
        "top": "0px"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-font)"
    }
  },
  "version": 3
}
